<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/walkthrough_background"
        android:padding="64dp"
        tools:context=".wakthroughActivity.WalkthroughSplashScreenFragment">

        <FrameLayout
            android:id="@+id/view_logo_circle"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/logo_circle"
            app:layout_constraintBottom_toBottomOf="@+id/txt_assistant"
            app:layout_constraintEnd_toEndOf="@+id/txt_news"
            app:layout_constraintStart_toStartOf="@+id/txt_news"
            app:layout_constraintTop_toTopOf="@+id/txt_news" />

        <TextView
            android:id="@+id/txt_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/gothic"
            android:text="News"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_assistant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:text="Assistant"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_news"
            app:layout_constraintStart_toStartOf="@+id/txt_news"
            app:layout_constraintTop_toBottomOf="@+id/txt_news" />

        <TextView
            android:id="@+id/txt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/gothic"
            android:text="Welcome!"
            android:textColor="@color/colorBackground_light"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_news"
            app:layout_constraintStart_toStartOf="@+id/txt_news"
            app:layout_constraintTop_toBottomOf="@+id/view_logo_circle" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothic"
            android:text="@string/welcome_message"
            android:textColor="@color/colorBackground_light"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_welcome" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

